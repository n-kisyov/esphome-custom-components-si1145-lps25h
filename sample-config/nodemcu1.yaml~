esphome:
  name: nodemcu1
  platform: ESP8266
  board: nodemcuv2
  
  includes:
    - "custom_components/SI1145/SI1145.h"
    - "custom_components/LPS25H/LPS25H.h"
    
  libraries:
    - "Adafruit SI1145 Library"
    - "LPS"

wifi:
  ssid: "ssid"
  password: "password"


  ap:
    ssid: "Nodemcu1 Fallback Hotspot"
    password: "password"

captive_portal:


logger:


api:
  password: "password"

ota:
  password: "password"

i2c:
  scan: True
  frequency: 100khz
sensor: 

  - platform: wifi_signal
    name: "WiFi Signal"
    update_interval: 2s

  - platform: custom

    lambda: |-
      auto UV_sensor = new SI1145_sensor();
      App.register_component(UV_sensor);
      return {UV_sensor->visible_sensor, UV_sensor->ir_sensor, UV_sensor->uvindex_sensor};
      
    

    sensors:
    - name: "Visible Light"
      unit_of_measurement: lux
      accuracy_decimals: 1
    - name: "IR Light"
      accuracy_decimals: 2
    - name: "UV Index"
      accuracy_decimals: 2

  - platform: custom

    lambda: |-
      auto LPS_sensor = new LPS25H_sensor();
      App.register_component(LPS_sensor);
      return {LPS_sensor->pressure_sensor, LPS_sensor->temperature_sensor,LPS_sensor->altitude_sensor};

    sensors:
    - name: "Atmospheric Pressure"
      unit_of_measurement: hPa
    - name: "Temperature"
      unit_of_measurement: C
      accuracy_decimals: 1
    - name: "Altitude"
      unit_of_measurement: m


